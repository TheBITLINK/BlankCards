{
    "parserOptions": {
        "ecmaVersion": 6
    },
    "env": {
        "node": true
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "array-bracket-spacing": [
            2,
            "never"
        ],
        "block-scoped-var": 2,
        "brace-style": [
            2,
            "allman"
        ],
        "camelcase": 1,
        "computed-property-spacing": [
            2,
            "never"
        ],
        "curly": 2,
        "eol-last": 2,
        "eqeqeq": [
            2,
            "smart"
        ],
        "max-depth": [
            1,
            3
        ],
        "new-cap": 1,
        "no-extend-native": 2,
        "no-mixed-spaces-and-tabs": 2,
        "no-unused-vars": 1,
        "no-use-before-define": [
            2,
            "nofunc"
        ],
        "object-curly-spacing": [
            2,
            "never"
        ],
        "semi": [
            2,
            "always"
        ],
        "keyword-spacing": [2, {"before": true, "after": true, "overrides": {}}],
        "space-unary-ops": 2
    }
}